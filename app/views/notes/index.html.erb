<% if @notes.empty? %>
  <div class="jumbotron">
    <%= content_tag :h1, t('view.notes.index.3dmind_will') %>
    <%= content_tag :p, t('view.notes.index.3dmind_will_detail') %>
    <p>
    <%= back_to_link t('view.notes.index.open_new_note'), new_note_path, :class => "btn btn-primary btn-lg", :role=>"button" %>
    <%= back_to_link t('view.notes.index.to_help'), {:controller => :help}, {:class => "btn btn-warning btn-lg", :role=>"button"} %>
    </p>
  </div>
<% else %>
  <div class="col-md-8">
  <div class="panel panel-default">
    <!-- Default panel contents -->
  <div class="panel-heading">Your notes.</div>
  <div class="list-group">
    <% @notes.each do |note| %>
      <li class="list-group-item"><div class="row"><%=back_to_link "<div class='col-md-11'>#{h note.note_title}#{note.published? ? " <span class='label label-default'>Shared</span>" : ""}</div>".html_safe, note_path(note) %><div class="col-md-1"><%= link_to '<i class="glyphicon glyphicon-remove-circle"></i>'.html_safe, note_path(note), :method => :delete, :data => {:confirm => t("view.notes.index.delete_this_note?")} %></div></div></li>
    <% end %>
  </div>
</div>
  <div class="list-group">
  <p>
    <%= back_to_link "<i class='glyphicon glyphicon-file'></i> #{t "view.notes.new.create_new_note"}".html_safe, new_note_path, :class => "btn btn-primary btn-md", :role=>"button" %>
    </p>
  </div>
</div>
<% end %>

