<h1><%%= getLongName('table_name','<%= plural_table_name %>')%> 詳細</h1>

<table class="show_table">
<% attributes.each do |attribute| -%>
  <tr>
    <th><%%= getLongName('<%= plural_table_name %>', '<%= attribute.name %>') %></th>
    <td><%%= @<%= singular_table_name %>.<%= attribute.name %> %></td>
  </tr>
<% end -%>
</table>

<%%= back_to_link '編集', edit_<%= singular_table_name %>_path(@<%= singular_table_name %>) %> |
<%%= link_to 'Destroy', <%= singular_table_name %>, method: :delete, data: { confirm: '削除します。よろしいですか?' } %> |
<%%= link_or_back '戻る', <%= index_helper %>_path %>

